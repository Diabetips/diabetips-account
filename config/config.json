{
    "diabetips": {
        "apiUrl": "https://api.diabetips.fr"
    },
    "http": {
        "host": "::",
        "port": 9080
    },
    "logger": {
        "appenders": {
            "console": {
                "type": "console"
            },
            "file": {
                "type": "file",
                "filename": "logs/@{pkg.name}.log",
                "maxLogSize": 10485760,
                "backups": 10,
                "compress": true,
                "keepFileExt": true
            }
        },
        "categories": {
            "default": {
                "appenders": ["console", "file"],
                "level": "all"
            },
            "http": {
                "appenders": ["console", "file"],
                "level": "all"
            }
        }
    }
}
